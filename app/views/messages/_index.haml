= turbo_stream.update "home" do
  = turbo_stream_from dom_id(current_user, "messages")
  .grid.grid-cols-12.gap-2
    .col-span-3.bg-gray-200(id="#{dom_id(current_user, "messages")}")
      = render messages
    .col-span-9.bg-gray-300
      = render "messages/form"
  .col-span-9.mt-2
    = button_to "Clear", delete_messages_path, method: :delete, class: "btn btn-danger"
